{{#partial "content"}}

    <div class="container text-center" style="margin-top:50px;">
        <h3 style="font-size: 30px; font-weight: bolder;">Register yourself:</h3>
        <hr style=" margin-left: 550px; width: 50px; height: 4px; border-width: 0; color: gray; background-color: gray;">
        <div class="row">
            <div class="col-md-4 jumbotron" style="margin-left:400px;">
        <form class="form" action="/create/designer/new" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">Email address:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="phone_number">Phone Number:</label>
                <input type="text" class="form-control" id="phone_number" name="phone_number" required>
            </div>
            <div class="form-group">
                <label for="designing_fields">Designing fields:</label>
                <input type="text" class="form-control" id="designing_fields" name="designing_fields" required>
            </div>
            <div class="form-group">
                <label for="experience">Experience:</label>
                <input type="text" class="form-control" id="experience" name="experience" required>
            </div>
            <div class="form-group">
                <label for="website">Website:</label>
                <input type="text" class="form-control" id="website" name="website">
            </div>

            <button type="submit" class="btn btn-default" style="background-color:gray;">Submit</button>
        </form>
            </div>
        </div>
    </div><br>

{{/partial}}

